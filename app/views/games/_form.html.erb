<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Winner&hellip;
	<select id="game_winner" name="game[winner]">
	    <% @players.each do |player| %>
		<option value="<%= player.id %>"><%= player.name %></option>
		<% end %>
	</select>
  </div>
  <div class="field">
   	Loser&hellip;
	<select id="game_loser" name="game[loser]">
	    <% @players.each do |player| %>
		<option value="<%= player.id %>"><%= player.name %></option>
		<% end %>
	</select>  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
